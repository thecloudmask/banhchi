{
  "hosting": {
    "site": "banhchi",
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/admin/events/**",
        "destination": "/admin/events/index.html"
      },
      {
        "source": "/admin/contents/**",
        "destination": "/admin/contents/index.html"
      },
      {
        "source": "/event/**",
        "destination": "/event/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
